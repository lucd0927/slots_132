<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充颜色（可选） -->
    <solid android:color="@android:color/white" />

    <!-- 边框 -->
    <stroke
        android:width="2dp"
        android:color="#C4C5C6" />

    <!-- 圆角（可选） -->
    <corners android:radius="8dp" />

    <!-- 内边距（可选） -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
</shape>
